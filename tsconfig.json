{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~root/*": ["./*"],
      "~config": ["src/config"],
      "~config/*": ["src/config/*"],
      "~features": ["src/features"],
      "~features/*": ["src/features/*"],
      "~lib": ["src/lib"],
      "~lib/*": ["src/lib/*"],
      "~core": ["src/modules/core"],
      "~core/*": ["src/modules/core/*"],
      "~layouts": ["src/modules/layouts"],
      "~layouts/*": ["src/modules/layouts/*"],
      "~shared": ["src/modules/shared"],
      "~shared/*": ["src/modules/shared/*"],
      "~common": ["src/modules/shared/common"],
      "~common/*": ["src/modules/shared/common/*"],
      "~utils": ["src/modules/shared/utils"],
      "~utils/*": ["src/modules/shared/utils/*"],
      "~validators": ["src/modules/shared/validators"],
      "~validators/*": ["src/modules/shared/validators/*"],
      "~logger": ["src/modules/core/logging"],
      "~logger/*": ["src/modules/core/logging/*"],
      "~pages": ["src/pages"],
      "~pages/*": ["src/pages/*"],
      "~styles/*": ["src/styles/*"],
      "~locales/*": ["public/locales/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "coverage",
    "linters",
    "deploy",
    "build",
    "dist",
    "docs",
    "out",
    ".vscode",
    ".next",
    ".yarn",
    ".pnpm-store",
    ".parcel-cache",
    "hint-report",
    "graph-dps",
    "playwright-report",
    "jest-html-reporters-attach",
    ".history",
    "public",
    "styles",
    "fake-api",
    "cypress",
    "_site",
    ".husky",
    ".github"
  ]
}
