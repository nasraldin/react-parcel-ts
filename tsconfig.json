{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~root/*": ["./*"],
      "~config": ["src/config"],
      "~config/*": ["src/config/*"],
      "~server": ["src/server"],
      "~server/*": ["src/server/*"],
      "~components": ["src/client/app/components"],
      "~components/*": ["src/client/app/components/*"],
      "~data": ["src/client/app/data"],
      "~data/*": ["src/client/app/data/*"],
      "~features": ["src/client/app/features"],
      "~features/*": ["src/client/app/features/*"],
      "~layouts": ["src/client/app/layouts"],
      "~layouts/*": ["src/client/app/layouts/*"],
      "~lib": ["src/client/app/lib"],
      "~lib/*": ["src/client/app/lib/*"],
      "~pages": ["src/client/app/pages"],
      "~pages/*": ["src/client/app/pages/*"],
      "~providers": ["src/client/app/providers"],
      "~providers/*": ["src/client/app/providers/*"],
      "~routes": ["src/client/app/routes"],
      "~routes/*": ["src/client/app/routes/*"],
      "~shared": ["src/client/app/shared"],
      "~shared/*": ["src/client/app/shared/*"],
      "~utils": ["src/client/app/shared/utils"],
      "~utils/*": ["src/client/app/shared/utils/*"],
      "~validators": ["src/client/app/shared/validators"],
      "~validators/*": ["src/client/app/shared/validators/*"],
      "~logger": ["src/client/app/lib/logging"],
      "~logger/*": ["src/client/app/lib/logging/*"],
      "~assets/*": ["src/client/assets/*"],
      "~styles/*": ["src/client/assets/scss/*"],
      "~svg/*": ["src/client/assets/svg/*"],
      "~locales/*": ["public/locales/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "coverage",
    "linters",
    "deploy",
    "build",
    "dist",
    "docs",
    "out",
    ".vscode",
    ".next",
    ".yarn",
    ".pnpm-store",
    ".parcel-cache",
    "hint-report",
    "graph-dps",
    "playwright-report",
    "jest-html-reporters-attach",
    ".history",
    "public",
    "styles",
    "fake-api",
    "cypress",
    "_site",
    ".husky",
    ".github"
  ]
}
